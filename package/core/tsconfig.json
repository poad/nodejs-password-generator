{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
